{
  "name": "matome-portfolio",
  "version": "2.0.0",
  "description": "Matome Mbowene's AI/ML Developer Portfolio - Refactored with SOLID principles",
  "main": "js/main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "build": "npm run lint && npm run test",
    "dev": "firebase serve",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions"
  },
  "keywords": [
    "portfolio",
    "ai",
    "machine-learning",
    "pytorch",
    "rag-systems",
    "solution-architecture",
    "solid-principles",
    "defensive-programming",
    "security",
    "performance"
  ],
  "author": "Matome Mbowene <matomepontso@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MatomeMb/matome-portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/MatomeMb/matome-portfolio/issues"
  },
  "homepage": "https://matome-portfolio.com",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "firebase": "^10.5.0",
    "firebase-functions": "^4.4.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/js/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/tests/**",
      "!js/main.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
